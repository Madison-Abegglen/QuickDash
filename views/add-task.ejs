<div class="addtask-form">
    <a href="/home">&larr; Back</a>
    <h2 class="form-message">Add New Task</h2>
    <form action="/add-task" method="POST">
        <label for="title">Title</label>
        <input type="text" placeholder="Task Title" name="title">
        <label for="body">Description</label>
        <textarea name="body" cols="15" rows="5"></textarea>
        <input type="submit" value="Add" class="addtask-btn">
    </form>
</div>