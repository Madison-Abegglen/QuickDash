<div class="updatetask-form">
    <a href="/home">&larr; Back</a>
    <form action="/delete-task/<%= data._id %>?_method=DELETE" method="POST" class="delete-task">
        <input type="submit" value="Delete" class="deletetask-btn">
    </form>
    <form action="/edit-task/<%= data._id %>?_method=PUT" method="POST" class="edit-task">
        <label for="title">Title</label>
        <input type="text" placeholder="Task Title" name="title">
        <label for="body">Description</label>
        <textarea name="body" cols="15" rows="5"></textarea>
        <input type="submit" value="Update" class="edittask-btn">
    </form>
</div>