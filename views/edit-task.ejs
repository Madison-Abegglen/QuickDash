<div class="updatetask-page">
  <a href="/home">&larr; Back</a>
  <div class="updatetask-header">
    <h2 class="form-message">View / Update Task</h2>
    <form
      action="/delete-task/<%= data._id %>?_method=DELETE"
      method="POST"
      class="delete-task"
    >
      <input type="submit" value="Delete" class="deletetask-btn" />
    </form>
  </div>
  <form
    action="/edit-task/<%= data._id %>?_method=PUT"
    method="POST"
    class="updatetask-form"
  >
    <label for="title">Title</label>
    <input
      type="text"
      placeholder="Task Title"
      name="title"
      value="<%= data.title %>"
    />
    <label for="body">Description</label>
    <textarea name="body" cols="15" rows="5"><%= data.body %></textarea>
    <input type="submit" value="Update" class="updatetask-btn" />
  </form>
</div>